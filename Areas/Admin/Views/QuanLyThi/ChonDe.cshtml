
@{
    ViewBag.Title = "ChonDe";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
    var bode = (List<TracNghiemOnline.Modell.Bo_De>)ViewBag.BoDe;
 
}

<div class="container-fluid">
    <h1 class="mt-4">Đề Thi </h1>
    <div class="row">
        @foreach (var item in bode)
        {
            <div class="col-md-3">
                <div class="card bg-primary  mb-4">
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <h3 class="small text-white">@item.NoiDung</h3>
                    </div>
                    <div class="card-body"> Thời Gian : @item.ThoiGianThi Phút </div>
                    <div class="card-body">Số Câu : @item.SoCau Câu </div>
                    <a class="btn  bg-danger "href="/Admin/QuanLyThi/ChonDe/@item.Ma_BoDe"> Bat Dau </a>
                </div>
            </div>
        }
    </div>
</div>

