@model List<TracNghiemOnline.Modell.MonHoc>
@{
    ViewBag.Title = "NgânHangCauHoi";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}
<div class="col-md-12">
    <input hidden="hidden" id="txtmon" value="@ViewBag.id" />
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">DANH SÁCH MÔN HỌC</h4>
        
            </div>
        </div>
        <div style="width:auto; height:3px; background-color:rgb(248,249,250);"></div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="add-row_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                    <div class="col-sm-12">
                        <table id="dataTable" class="display table table-striped table-hover dataTable" role="grid" aria-describedby="add-row_info">
                            <thead>

                                <tr>
                                    <th>Mã Môn </th>
                                    <th>Tên Môn Học</th>
                                    <th> Mô Tả </th>
                                    <th></th>

                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @item.Ma_Mon </td>
                                        <td> @item.TenMon</td>
                                        <td> @item.TenMon </td>
                                        <td>
                                            <a href="/Admin/Home/ChuongHoc/@item.Ma_Mon" class="btn btn-sm btn-primary">
                                                <span><i class="far fa-eye"></i></span>
                                            </a>&ensp;
                                        </td>

                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
</div>

