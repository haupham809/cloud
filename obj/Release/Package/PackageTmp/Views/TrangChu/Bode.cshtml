@model  List<TracNghiemOnline.Modell.Bo_De>
@{
    ViewBag.Title = "Bode";
    Layout = "~/Views/Share/LayOutHome.cshtml";
}
@section scripts{
    <script>
        function Bode(ID) {

         
            var now = new Date();
            //var now = TaoNgay(ngay, thoigian);
            var tgbd = now.getFullYear() + '/' + (now.getMonth() + 1) + '/' + now.getDate() + '/' + now.getHours() + '/' + now.getMinutes() + '/' + now.getSeconds() + ""
            $.ajax({
                type: 'POST',
                url: '/TrangChu/TGTHI',
                data: { tgbd: tgbd },
                success: function (res) {
                   
                        window.location = "/ThiThu/" + ID;
                  
                }


            });
        }
    </script>

}



<section class="py-8">
    <div class="container-fluid">
        <div class="row" style="padding:0% 5%">

            @foreach (var item in Model)
            {


                <div class="col-md-3">
                    <div class="card mb-4" style="border:solid 1px rgb(218,220,224);">
                        <div class="caption" style="height: 100px; border-top-left-radius: 9px; border-top-right-radius: 9px; padding: 20px 10px; background-image: url('https://www.gstatic.com/classroom/themes/img_backtoschool.jpg'); background-size: cover; ">
                            <h4 class="text-uppercase text-white" style="font-family:Arial">@item.NoiDung</h4>
                        </div>
                        <div class="card-body">
                            <p>Thời gian: @item.ThoiGianThi phút </p>
                            <p>Số câu: @item.SoCau câu</p>
                        </div>

                        <div class="card-footer bg-white"><button class="btn" style="border:solid 1px rgb(218,220,224)" id="@item.Ma_BoDe" onclick="Bode(this.id)">LÀM BÀI</button></div>

                    </div>
                </div>

            }
        </div>
    </div>
</section>


