@model  List<TracNghiemOnline.Modell.LopHocPhan>
@{
    ViewBag.Title = "LopHocPhan";
    Layout = "~/Views/Share/LayOutHome.cshtml";
}

@section scripts {

    <script>

        function BoDe(ID) {
            document.location = '/Bode/' + ID;

        }


    </script>

}

<section class="py-8">
    <div class="container-fluid">
        <div class="row" style="padding:0% 5%">

            @foreach (var item in Model)
            {

                <div class="col-md-3" onclick="BoDe(id)" id="@item.MaLop.Trim()" style="margin-bottom:3%">
                    <div class="card" style="width: 18rem;border:solid 1px rgb(218,220,224); cursor:pointer">
                        <div class="caption" style=" height:100px; border-top-left-radius:9px;border-top-right-radius:9px; padding:20px 10px;background-image: url('https://www.gstatic.com/classroom/themes/img_read.jpg');background-size: cover;">
                            <h4 class="text-uppercase text-white" style="font-family:Arial">@item.TenLop</h4>
                        </div>
                        <div class="card-body">
                            <p>Giáo viên: @item.GiaoVien.TenGV </p>
                            <p>Môn học: @item.MonHoc.TenMon</p>
                            <p>Học kỳ: @item.KiThi.TenKi </p>
                        </div>
                        @*<div class="card-body"> Kỳ Học : @item.KiThi.TenKi </div>
                    <div class="card-body"> Môn :  @item.MonHoc.TenMon </div>*@
                    </div>
                </div>

               

            }
        </div>
    </div>
</section>
